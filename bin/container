#!/usr/bin/env bash
set -Euo pipefail

case $1 in
  up)
    scale=${2:-1}
    while true; do
      docker-compose up -t 0 --build --force-recreate --scale app=$scale || true
      sleep 0.1
    done
  ;;
  shell)
    while true; do
      docker-compose exec app bash || true
      echo ""
      echo " -- container exited"
      sleep 1
    done
  ;;
esac
